<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_welcome"
        android:id="@+id/tv_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="onDownload"
        android:text="@string/DL_JSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/Download" />

    <Button
        android:text="@string/HexaFromColor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Download"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/hexa_from_color" />

    <Button
        android:text="@string/RGBFromColor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hexa_from_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/rgb_from_color" />

    <Button
        android:text="@string/ColorFromHexa"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgb_from_color"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/color_from_hexa" />

    <Button
        android:text="@string/ColorFromRGB"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_from_hexa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/color_from_rgb" />

    <Button
        android:text="@string/HexaFromRGB"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_from_rgb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/hexa_from_rgb" />

    <Button
        android:text="@string/RGBFromHexa"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hexa_from_rgb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:id="@+id/rgb_from_hexa" />

</RelativeLayout>
